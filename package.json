{
	"name": "@candlefw/wax",
	"version": "0.0.6",
	"description": "CLI Tools",
	"type": "module",
	"main": "./build/library/wax.js",
	"types": "./build/types/wax.d.ts",
	"engines": {
		"node": ">=14"
	},
	"scripts": {
		"build.watch": "tsc --watch",
		"build": "tsc",
		"test-wickurse": "node ./test/composite.practical.spec.js",
		"prepublishOnly": "tsc -p ./tsconfig.json && yarn test",
		"build-colors": "./utils/build_colors.js",
		"test": "cfw.test ./test/**",
		"compile.debug": "hydrocarbon compile --output_dir ./source/typescript/parser/ --annotations --debug  ./source/grammar/process_args.hcg",
		"compile.release": "hydrocarbon compile --output_dir ./source/typescript/parser/ --recognizer_type wasm  ./source/grammar/process_args.hcg"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/candlefw/test.git"
	},
	"author": "galactrax <anthonycweathersby@gmail.com>",
	"license": "MIT",
	"dependencies": {
		"@candlefw/css": "*",
		"@candlefw/conflagrate": "*",
		"@candlefw/hydrocarbon": "*",
		"@candlefw/html": "*",
		"@candlefw/url": "*",
		"@candlefw/wick": "*",
		"@candlefw/wind": "*"
	},
	"devDependencies": {
		"@candlefw/test": "*",
		"jimp": "^0.9.6"
	}
}